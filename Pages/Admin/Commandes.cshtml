@page
@model OrdersModel
@{
    Layout = "";
    ViewData["Title"] = "Liste des Commandes";
}

<h1>@ViewData["Title"]</h1>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Commandes</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>



<form method="post">
    <div class="table-container">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>OrderNo</th>
                    <th>ProductId</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>OrderDate</th>
                    <th>Traité</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.OrderNo</td>
                        <td>@order.ProductId</td>
                        <td>@order.Quantity</td>
                        <td>
                            @if (order.Status == "Traité")
                            {
                                <span class="badge bg-success">Traité</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">En cours de traitement</span>
                            }
                        </td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <input type="checkbox" name="processedOrders" value="@order.OrderId" @(order.Status == "Traité" ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end mt-3">
        <button type="submit" class="btn btn-primary">Mettre à jour les commandes</button>
    </div>
</form>

<style>
    .page-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-left: 30px;
        padding-right: 30px;
    }

    .table-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .btn {
        margin-top: 40px;
        margin-right:40px;
    }

    .page-title {
        font-size: 1.5rem;
        text-align: center;
    }

    h1 {
        margin-bottom: 20px;
        text-align: center;
    }

    .table-container table {
        border-collapse: collapse;
        width: 100%;
    }

    .table-container th, .table-container td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    .table-container th {
        background-color: #f2f2f2;
        text-align: left;
    }

    .badge.success {
        background-color: #28a745;
    }

    .badge.danger {
        background-color: #dc3545;
    }
</style>

<!-- Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

</body>
</html>

