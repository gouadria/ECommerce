@page
@model ECommerce.Pages.Admin.AccessDeniedModel
@{
    Layout = null;
    ViewData["Title"] = "Accès refusé";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-10 rounded-2xl shadow-lg text-center max-w-md">
        <h1 class="text-4xl font-bold text-red-600 mb-4">⛔ Accès refusé</h1>
        <p class="text-gray-700 mb-6">Désolé, vous n'avez pas la permission d'accéder à cette page.</p>

        <a asp-page="/Index" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition duration-200">
            Retour à l'accueil
        </a>
    </div>
</div>
